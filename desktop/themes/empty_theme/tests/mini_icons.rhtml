<style>

table.mini td {
  border: 1px #ccc solid;
}

table.mini td div {
  width: 20px;
  height: 20px;
}

table.mini td div img {
  position: relative;
  left: 2px;
  top: 2px;
}

#qunit { display: none; }

.invert {
  background-color: #003f85;
}

</style>

<script>
function setClass(classNames) {
  console.log('setClass ' + classNames);
  Q$('table').attr('class', 'mini ' + classNames);
};
</script>

