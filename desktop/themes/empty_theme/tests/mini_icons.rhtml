<h1>Mini Icons</h1>
<div class="states">
  Set Class: 
<% %(regular,active,disabled,sel,disabled active,disabled sel).split(',').each do |class_name| %>
<a onclick="console.log('hello!');setClass('<%= class_name %>');" href="javascript:console.log('hello!');"><%= class_name %></a> |
<% end %>
</div>

<hr />
<div class="normal">
<div><strong>Normal</strong></div>
<table class="mini"><tr>
<% @icon_names.size.times do |idx| %>
  <td><div><img src="<%= sc_static('blank') %>" class="icon sc-mini-icon <%= @icon_names[idx] %>" /></div></td>
  <% if ((idx+1) % 16) == 0 %>
    </tr><tr>
  <% end %>
<% end %>
  </tr>
</table>
</div>

<hr />
<div class="invert">
<div><strong>Inverted</strong></div>
<table class="mini"><tr>
<% @icon_names.size.times do |idx| %>
  <td><div><img src="<%= sc_static('blank') %>" class="icon inverted sc-mini-icon <%= @icon_names[idx] %>" /></div></td>
  <% if ((idx+1) % 16) == 0 %>
    </tr><tr>
  <% end %>
<% end %>
  </tr>
</table>
</div>